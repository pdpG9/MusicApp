<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="@dimen/player_avatar_size"
            android:layout_height="@dimen/player_avatar_size"
            android:layout_margin="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_player_screen" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:maxLines="1"
                android:id="@+id/tvTitleNotification"
                style="@style/pasific_text_style"
                android:text="Song title"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:maxLines="1"
                android:id="@+id/tvArtistNotification"
                style="@style/railaway_bold_text_style"
                android:text="Artist"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_cancel" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btPrevNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginEnd="6dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_prev_large" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_prev_small" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btPlay"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="6dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play" />

        <LinearLayout
            android:id="@+id/btNextNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_next_small" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_next_large" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>